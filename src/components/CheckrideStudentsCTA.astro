---
import ImageComp from "./ImageComp.astro";

const { content } = Astro.props;
---

<section
  class="flex flex-col md:flex-row mx-auto px-5 md:px-10 lg:px-20 py-24 bg-gradient-to-br from-main-blue-700 to-main-blue-900 text-white items-center text-center gap-10"
>
  <div class="w-full md:w-1/3">
    <ImageComp
      src={content.imagePath}
      alt={content.imageAlt}
      classes="w-full h-64 md:h-96 object-cover object-center"
    />
  </div>
  <div class="md:w-2/3 flex flex-col gap-6 items-center">
    <h3 class="text-5xl font-bold">{content.title}</h3>
    <p class="text-xl lg:text-2xl font-light tracking-wider max-w-4xl">
      {content.description}
    </p>
    <a href={content.link} class="btn-secondary w-fit">{content.linkText}</a>
  </div>
</section>
