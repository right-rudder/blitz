---
const { data } = Astro.props;
import ImageComp from "./ImageComp.astro";
---

<div class="relative overflow-hidden h-[60vh] flex">
  <ImageComp
    src={data.primaryImage}
    alt={data.primaryAlt}
    classes={`object-cover w-full`}
    loading="eager"
    quality={100}
  />

  <div
    class="flex px-5 md:px-10 lg:px-20 absolute top-0 backdrop-brightness-50 bottom-0 right-0 left-0 text-white items-center justify-center text-center"
  >
    <div class="flex flex-col gap-3 translate-y-5 sm:translate-y-10">
      <h1
        class="text-4xl max-w-2xl lg:text-7xl font-black lg:max-w-6xl uppercase italic"
      >
        {data.title}
      </h1>
      {
        data.subtitle && (
          <h2 class="text-2xl lg:text-3xl font-semibold">{data.subtitle}</h2>
        )
      }
    </div>
  </div>
</div>
