---
import ImageComp from "./ImageComp.astro";
import { FaGifts } from "react-icons/fa";
import { PiAirplaneTakeoffFill } from "react-icons/pi";

const data = {
  title: "This Christmas, take to the skies!",
  description: `Share an unforgettable experience with a <b class="font-extrabold">60-minute Discovery Flight for $205</b>, perfect for <b class="font-extrabold">you and one passenger</b>. Reserve anytime <b class="font-extrabold">through December 31</b>, then schedule your flight for the date that works best for you.`,
  cta: {
    url: "/discovery-flight",
    text: "Book Now",
  },
  images: [
    {
      src: "/src/assets/images/blitz-discovery-flight-view.webp",
      alt: "View of Ogden Mountains from a plane",
      class: "object-cover h-full w-1/3",
    },
    {
      src: "/src/assets/images/blitz-discovery-flight-night-view-utah.webp",
      alt: "Above view of Utah at night from an airplane window",
      class: "object-cover h-full w-1/3",
    },
    {
      src: "/src/assets/images/view-from-the-skies-discovery-flight-blitz-aviation.webp",
      alt: "Above view of a city and a mountain range from an airplane window",
      class: "object-cover h-full w-1/3",
    },
  ],
};
---

<section>
  <div class="mx-auto flex flex-col items-stretch lg:flex-row">
    <div class="px-5 py-24 flex-1 flex justify-center flex-col gap-5 relative md:px-10 lg:px-20">
      <FaGifts
        className="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 -z-10 text-orange-400/15 max-h-3/4 h-auto w-1/3"
      />
      <h3 class="text-pretty text-4xl font-bold tracking-wide text-main-black capitalize text-orange-400 sm:text-5xl">
        {data.title}
      </h3>
      <p class="text-gray-600 font-light text-2xl tracking-wide" set:html={data.description} />
      <a href={data.cta.url} class="btn-primary-lg w-fit mt-3 flex! items-center gap-2" target="_blank">
        <PiAirplaneTakeoffFill />
        {data.cta.text}
      </a>
    </div>
    <div class="w-full flex h-[60vh] lg:w-auto lg:h-[612px] lg:flex-1">
      {data.images.map((img) => <ImageComp src={img.src} alt={img.alt} classes={img.class} />)}
    </div>
  </div>
</section>
