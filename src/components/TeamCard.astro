---
import ImageComp from "./ImageComp.astro";

const { name, image, certificatesAndRatings, bio } = Astro.props;
---

<div class="flex gap-5 flex-col lg:flex-row">
  <div class="flex-3/4">
    <ImageComp
      src={image}
      alt={name}
      classes="object-cover aspect-square h-full w-full"
    />
  </div>

  <div
    class="flex flex-col gap-1 bg-main-blue-100 p-8 text-center lg:text-start justify-center"
  >
    <h2 class="text-pretty text-2xl font-medium tracking-wide sm:text-2xl">
      {name}
    </h2>
    <p class="text-blue-800 text-lg tracking-wide italic">
      {certificatesAndRatings.map((cert) => <span>{cert} </span>)}
    </p>
    <p class="lg:text-lg tracking-wider font-light mt-5">{bio}</p>

    <div class="flex justify-center lg:justify-start gap-5 mt-5">
      <a
        class="border border-gray-500 rounded-full p-2 hover:bg-blue-400 duration-100"
        href="#"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="size-5"
          viewBox="0 0 24 24"
          ><path
            fill="currentColor"
            d="M14.2 2.875A4.625 4.625 0 0 0 9.575 7.5v2.575H7.1c-.124 0-.225.1-.225.225v3.4c0 .124.1.225.225.225h2.475V20.9c0 .124.1.225.225.225h3.4c.124 0 .225-.1.225-.225v-6.975h2.497c.103 0 .193-.07.218-.17l.85-3.4a.225.225 0 0 0-.218-.28h-3.347V7.5a.775.775 0 0 1 .775-.775h2.6c.124 0 .225-.1.225-.225V3.1c0-.124-.1-.225-.225-.225z"
          ></path></svg
        >
