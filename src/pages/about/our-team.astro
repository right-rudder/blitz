---
import Header from "../../components/Header.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import team from "../../data/team";
import TeamCard from "../../components/TeamCard.astro";

const headerData = {
  title: "Our Team",
  primaryImage:
    "/src/assets/images/team-blitz-aviation-flight-training-utah-salt-lake.webp",
  primaryAlt: "Team Blitz Aviation Flight Training Utah Salt Lake",
};
---

<BaseLayout
  siteTitle="Meet Our Certified Flight Instructors | Blitz Aviation's Expert Team in Ogden, Utah"
  siteDescription="Learn from Blitz Aviation's experienced CFIs in Ogden, Utah. Our team of passionate certified flight instructors brings diverse backgrounds and specialized expertise to deliver personalized, high-quality flight training for all levels."
  siteKeywords="certified flight instructors Utah, CFI Ogden Utah, flight training instructors, aviation teachers Utah, experienced flight instructors, Blitz Aviation team, aviation mentors, pilot instructors Ogden, professional flight teachers, aviation education experts, flight school instructors"
>
  <Header slot="hero" data={headerData} />

  <section
    class="mx-auto px-5 md:px-10 lg:px-20 py-16 gap-10 flex flex-col max-w-7xl"
  >
    <div class="text-center max-w-3xl mx-auto mb-8">
      <h1 class="text-4xl font-bold mb-4">Our Expert Flight Instructors</h1>
      <p class="text-lg">
        At Blitz Aviation, our team of dedicated Certified Flight Instructors
        (CFIs) brings expertise, passion, and personalized attention to your
        flight training journey. Each instructor is committed to your success
        and safety in the air.
      </p>
    </div>

    {team.map((member) => <TeamCard {...member} />)}
  </section>
</BaseLayout>
