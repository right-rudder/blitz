---
import Header from "../../components/Header.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import CourseLayout from "../../layouts/CourseLayout.astro";
import programs from "../../data/programs";
import CheckrideStudentsCTA from "../../components/CheckrideStudentsCTA.astro";
export function getStaticPaths() {
  return programs.map(({ data }) => {
    return {
      params: { slug: data.slug },
      props: {
        data,
      },
    };
  });
}

const cta = {
  title: "Ready to Start Your Flight Training?",
  description:
    "Take the first step toward earning your Private Pilot License with Blitz Aviation. Contact us today to schedule your introductory flight and begin your journey in aviation!",
  link: "/enrollment-form",
  linkText: "Enroll Now",
  imagePath:
    "/src/assets/images/Student Checkride Devren passing PPL checkride CFI Hank and Mycah.webp",
  imageAlt: "Man in front of an airplane holding a poster with \"Private Pilot\" written on it",
};

const { data } = Astro.props;
---

<BaseLayout siteTitle={data.siteTitle} siteDescription={data.siteDescription}>
  <Header slot="hero" data={data} />
  <CourseLayout data={data} />
  {data.cta && <CheckrideStudentsCTA content={data.cta || cta} />}
</BaseLayout>
